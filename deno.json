{
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A - --config=_lume/config.ts",
    "build": "deno task lume",
    "serve": "deno task build -s"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.0.3/"
  },
  "fmt": {
    "proseWrap": "preserve"
  }
}
