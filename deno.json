{
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A - --config=lume/config.ts",
    "build": "deno task lume --warning",
    "serve": "deno task build -s",
    "check": "deno fmt && deno lint"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.0.3/",
    "@type/markdownIt": "https://esm.sh/v135/@types/markdown-it@13.0.7/~.d.ts"
  },
  "fmt": {
    "proseWrap": "preserve",
    "exclude": ["./_site"]
  },
  "lint": {
    "exclude": ["./_site"]
  }
}
